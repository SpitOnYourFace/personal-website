                </svg>
              </a>
            </div>
            <a href={project.href} target="_blank" rel="noopener noreferrer">
              <h3 class="text-base font-semibold text-primary mb-2 group-hover:text-accent transition-colors duration-500">
                {project.title}
              </h3>
            </a>
            <p class="text-[13px] text-primary-secondary leading-relaxed mb-4">
              <span data-lang="en">{project.descEn}</span>
              <span data-lang="bg">{project.descBg}</span>
            </p>
            <div class="flex flex-wrap gap-2">
              {project.tags.split(' · ').map((tag: string) => (
                <span class="text-[11px] font-medium text-primary-tertiary bg-primary/[0.03] px-2.5 py-1 rounded-md group-hover:bg-accent/5 group-hover:text-accent/80 transition-all duration-500">{tag}</span>
              ))}
            </div>
          </div>
