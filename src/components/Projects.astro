          <div class="absolute bottom-0 left-0 right-0 h-[2px] bg-accent scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></div>
          <!-- Glow -->
          <div class="absolute inset-0 rounded-2xl bg-gradient-to-b from-accent/0 to-accent/0 group-hover:from-accent/[0.02] group-hover:to-accent/[0.06] transition-all duration-500"></div>
          <div class="relative p-6">
            <div class="flex items-start justify-between mb-4">
              <div class="text-accent p-2.5 bg-accent/5 rounded-xl group-hover:bg-accent/10 transition-colors duration-500" set:html={project.icon} />
              <a
                href={project.href}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-1.5 text-xs font-medium text-primary-tertiary group-hover:text-accent transition-colors duration-500 translate-x-2 opacity-0 group-hover:translate-x-0 group-hover:opacity-100"
