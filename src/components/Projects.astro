<style>
  .flowers {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;
  }

  .flower {
    position: absolute;
    animation: sway ease-in-out infinite;
    will-change: transform;
    backface-visibility: hidden;
  }

  .f1 { width: 18px; top: 8%;  left: 5%;  animation-duration: 4s; }
  .f2 { width: 14px; top: 15%; right: 8%; animation-duration: 5s; animation-delay: -1s; }
  .f3 { width: 16px; top: 45%; left: 3%;  animation-duration: 4.5s; animation-delay: -2s; }
  .f4 { width: 12px; top: 55%; right: 4%; animation-duration: 5.5s; animation-delay: -0.5s; }
  .f5 { width: 13px; top: 80%; left: 7%;  animation-duration: 4.2s; animation-delay: -3s; }
  .f6 { width: 15px; top: 85%; right: 6%; animation-duration: 5.2s; animation-delay: -1.5s; }
  .f7 { width: 11px; top: 30%; left: 1%;  animation-duration: 4.8s; animation-delay: -2.5s; }
  .f8 { width: 16px; top: 70%; right: 2%; animation-duration: 4.3s; animation-delay: -0.8s; }
  .f9 { width: 15px; top: 12%; left: 12%; animation-duration: 5.1s; animation-delay: -1.2s; }
  .f10 { width: 12px; top: 40%; right: 10%; animation-duration: 4.6s; animation-delay: -3.5s; }
  .f11 { width: 14px; top: 65%; left: 2%;  animation-duration: 5.3s; animation-delay: -0.3s; }
  .f12 { width: 11px; top: 90%; right: 9%; animation-duration: 4.4s; animation-delay: -2.2s; }

  @keyframes sway {
    0%, 100% { transform: rotate(-5deg) translateY(0); }
    50% { transform: rotate(5deg) translateY(-3px); }
  }

  /* Browser frame mockup */
  .browser-frame {
    border-radius: 10px;
    overflow: hidden;
    border: 1px solid rgb(var(--color-primary) / 0.08);
    background: rgb(var(--color-surface-subtle));
  }

  .browser-bar {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 8px 12px;
    background: rgb(var(--color-primary) / 0.04);
    border-bottom: 1px solid rgb(var(--color-primary) / 0.06);
  }

  .browser-dots {
    display: flex;
    gap: 5px;
    flex-shrink: 0;
  }

  .dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
  }
  .dot-red { background: #ff5f57; }
  .dot-yellow { background: #febc2e; }
  .dot-green { background: #28c840; }

  .browser-url {
    display: flex;
    align-items: center;
    gap: 5px;
    flex: 1;
    font-size: 11px;
    font-family: 'JetBrains Mono', monospace;
    color: rgb(var(--color-primary-tertiary));
    background: rgb(var(--color-primary) / 0.03);
    padding: 3px 10px;
    border-radius: 5px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }

  .browser-content {
    position: relative;
    overflow: hidden;
  }

  .browser-content img {
    transition: opacity 0.3s ease;
  }
</style>
